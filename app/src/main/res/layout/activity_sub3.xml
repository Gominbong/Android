<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearlayout55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".54"
        app:layout_constraintWidth_percent=".9999"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout66"
        app:layout_constraintTop_toBottomOf="@id/linearlayout55"
        app:layout_constraintWidth_percent=".9999"
        app:layout_constraintHeight_percent=".09"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textname"
            android:textSize="25sp"
            android:text="햄버거"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout77"
        app:layout_constraintTop_toBottomOf="@id/linearlayout66"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".9999"
        app:layout_constraintHeight_percent=".1"
        android:orientation="horizontal">

        <TextView
            android:text="수량"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/textcount"
            android:text="0"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform" />
        <ImageButton
            android:id="@+id/imageButtonUp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <ImageButton
            android:id="@+id/imageButtonDown"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@android:drawable/arrow_down_float" />
    </LinearLayout>




    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/linearlayout77"
        app:layout_constraintWidth_percent=".9999"
        app:layout_constraintHeight_percent=".11"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="주문금액:"
            android:textSize="25sp" />
        <TextView
            android:text="0"
            android:id="@+id/textprice"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:text="원"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".9999"
        app:layout_constraintHeight_percent=".15"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:text="장바구니담기"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>